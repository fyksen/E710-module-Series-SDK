<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1"
    android:gravity="center_vertical"
   >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5.0sp"
        android:paddingLeft="10.0sp"
        android:paddingRight="10.0sp"
        android:paddingTop="5.0sp" >
		
		<TextView
			android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:gravity="center_vertical"
        	android:paddingLeft="4.0dip"
        	android:text="@string/SerialPort"
        	android:textColor="#ff222222" />

		<Spinner
		    android:id="@+id/spinner1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="1" />
	</LinearLayout>
	
    <LinearLayout
	    android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center_vertical"
		android:layout_marginTop="10sp"
		android:paddingLeft="10.0sp"
		android:paddingTop="5.0sp"
		android:paddingRight="10.0sp"
		android:paddingBottom="5.0sp" >
		
		<TextView
			android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:gravity="center_vertical"
        	android:paddingLeft="4.0dip"
        	android:text="@string/BaudRate"
        	android:textColor="#ff222222"/>

		<TableLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="10.0sp"
			android:paddingRight="10.0sp"
			android:shrinkColumns="0"
			android:stretchColumns="0" >
			
			<LinearLayout
			    android:id="@+id/main_linearLayout"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content" >

			   <RadioGroup
			        android:id="@+id/group_monza_status"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_weight="0.43"
			        android:gravity="left"
			        android:orientation="vertical" >
					
			       <RadioButton
			            android:id="@+id/baud_9600"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="9600"
			            android:checked="true"
			            android:textColor="#333333" />
			       
			        <RadioButton
			            android:id="@+id/baud_19200"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="10dp"
			            android:text="19200"
			            android:textColor="#333333" />

			        <RadioButton
			            android:id="@+id/baud_38400"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="38400"
			            android:layout_marginTop="10dp"
			            android:textColor="#333333" />

			        <RadioButton
			            android:id="@+id/baud_57600"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			             android:layout_marginTop="10dp"
			            android:text="57600"
			            android:checked="true"
			            android:textColor="#333333" />

			        <RadioButton
			            android:id="@+id/baud_115200"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="10dp"
			            android:text="115200"
			            android:textColor="#333333" />
			    </RadioGroup>
			</LinearLayout>

		</TableLayout>
	</LinearLayout>
	</LinearLayout>
    <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
        android:orientation="vertical"
         android:layout_weight="1"
       >

	<TextView
	    android:id="@+id/textview_connect"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="5.0sp"
	    android:layout_marginLeft="20.0sp"
	    android:layout_marginRight="20.0sp"
	    android:layout_marginTop="20.0sp"
	    android:background="@drawable/color_button_selector"
	    android:clickable="true"
	    android:gravity="center_horizontal"
	    android:paddingBottom="10.0sp"
	    android:paddingTop="10.0sp"
	    android:text="@string/Connect"
	    android:textColor="#ff222222"
	    android:textStyle="bold" />

</LinearLayout>
</LinearLayout>

