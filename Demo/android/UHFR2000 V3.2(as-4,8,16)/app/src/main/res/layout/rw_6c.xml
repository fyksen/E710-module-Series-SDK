<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
	<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

           <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/info_result" />

                <TextView
                    android:id="@+id/rw_result"
                    android:layout_weight="2"
                    android:layout_width="0dip"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:textColor="#cc0000"
                    android:gravity="center"
                    android:layout_height="@dimen/rm_6c_et_height"/>
        </LinearLayout>
        
	    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

           <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/txtepc" />
			<Spinner
                android:id="@+id/epc_spinner"
                android:layout_width="0dip"
                android:layout_height="@dimen/rm_6c_et_height"
                android:layout_weight="2"
                android:gravity="left" />
               
        </LinearLayout>
        
	  <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

           <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/bankid" />
			<Spinner
                android:id="@+id/mem_spinner"
                android:layout_width="0dip"
                android:layout_height="@dimen/rm_6c_et_height"
                android:layout_weight="2"
                android:gravity="left" />
               
        </LinearLayout>
        
	  <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

           <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/memptr" />
			<EditText
                android:id="@+id/et_wordptr"
                android:layout_width="0dip"
                android:layout_height="@dimen/rm_6c_et_height"
                android:layout_weight="2"
                android:inputType="numberSigned"
                android:text="0"
                android:gravity="left" />
               
        </LinearLayout>
        
	  <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

           <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/memlen" />
			<EditText
                android:id="@+id/et_length"
                android:layout_width="0dip"
                android:layout_height="@dimen/rm_6c_et_height"
                android:layout_weight="2"
                android:inputType="numberSigned"
                android:text="6"
                android:gravity="left" />
               
        </LinearLayout>
        
	  
	  <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

           <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/pwdstr" />
			<EditText
                android:id="@+id/et_pwd"
                android:layout_width="0dip"
                android:layout_height="@dimen/rm_6c_et_height"
                android:layout_weight="2"
                android:hint="00000000" 
                android:gravity="left" />
               
        </LinearLayout>
        
	  <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

           <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/writestr" />
			<EditText
                android:id="@+id/et_content_6c"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="E2034121EA12BCED32498765"
                android:inputType="textMultiLine"
                android:gravity="left" />
               
        </LinearLayout>
        
	   <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

           <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/readstr" />
			<EditText
                android:id="@+id/et_read_6c"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text=""
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:gravity="left" />
               
        </LinearLayout>
        
	    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_read_6c"
                android:layout_width="0dip"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/color_button_selector"
                android:text="@string/butnread" />

            <Button
                android:id="@+id/button_write_6c"
                android:layout_width="0dip"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/color_button_selector"
                android:text="@string/butnwrite" />
            <Button
                android:id="@+id/button_write_epc"
                android:layout_width="0dip"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/color_button_selector"
                android:text="@string/butnwriteepc" />
               
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/tvLockMem" />
            <Spinner
                android:id="@+id/lockmem_spinner"
                android:layout_width="0dip"
                android:layout_height="@dimen/rm_6c_et_height"
                android:layout_weight="2"
                android:gravity="left" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/tvLockType" />
            <Spinner
                android:id="@+id/locktype_spinner"
                android:layout_width="0dip"
                android:layout_height="@dimen/rm_6c_et_height"
                android:layout_weight="2"
                android:gravity="left" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_lock"
                android:layout_width="0dip"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/color_button_selector"
                android:layout_marginLeft="5dp"
                android:text="@string/btlock" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/tvKillPwd" />
            <EditText
                android:id="@+id/et_kwd"
                android:layout_width="0dip"
                android:layout_height="@dimen/rm_6c_et_height"
                android:layout_weight="2"
                android:hint="12345678"
                android:gravity="left" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_kill"
                android:layout_width="0dip"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/color_button_selector"
                android:layout_marginLeft="5dp"
                android:text="@string/btKill" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#cc0000"
                android:text="@string/noteStr" />

        </LinearLayout>


   
</LinearLayout>
</ScrollView>